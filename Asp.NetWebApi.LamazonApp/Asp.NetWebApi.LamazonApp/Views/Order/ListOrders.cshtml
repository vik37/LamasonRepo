@model List<OrderVM>
@{
    ViewData["Title"] = "ListOrders";
}

<h2>Orders History</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Status</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.StatusTypeVM</td>
                <td>@order.Price</td>
                <td>
                    <a asp-action="OrderDetails" asp-controller="Order" asp-route-orderId="@order.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>

        }
    </tbody>
</table>